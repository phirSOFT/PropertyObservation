<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.0;netstandard1.3</TargetFrameworks>
    <LangVersion>8.0</LangVersion>
    <AssemblyName>PropertyObservation</AssemblyName>
    <RootNamespace>phirSOFT.PropertyObservation</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>phirSOFT.PropertyObservation</PackageId>
    <Authors>phirSOFT</Authors>
    <Company />
    <Product />
    <PackageProjectUrl>https://github.com/phirSOFT/PropertyObservation</PackageProjectUrl>
    <RepositoryUrl>https://github.com/phirSOFT/PropertyObservation</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <AssemblyVersion>0.1.0.0</AssemblyVersion>
    <FileVersion>0.1.0.0</FileVersion>
    <PackageLicenseUrl>https://raw.githubusercontent.com/phirSOFT/PropertyObservation/master/LICENSE</PackageLicenseUrl>
    <Version>0.1.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.ValueTuple" Version="4.5.0" />
  </ItemGroup>

  <PropertyGroup Condition="'$(TargetFramework)' == 'netstandard1.3'">
    <DefineConstants>TRACE;netstandard13</DefineConstants>
  </PropertyGroup>

</Project>
